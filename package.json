{
  "name": "vexel",
  "version": "1.0.0",
  "description": "A DID Bridge Layer creating sovereign interoperability across distributed identity systems. VEXEL connects decentralized identifiers across ecosystems, enabling autonomous, cross-chain identity bridging while preserving cryptographic sovereignty. No gatekeepers. No middlemen. Just pure, protocol-level identity freedom.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:core",
    "build:core": "tsc",
    "build:database": "cd src/database && npm run build",
    "build:ipfs": "cd src/ipfs && npm run build",
    "build:knowledge-base": "cd src/knowledge-base && npm run build",
    "build:modules": "npm run build:database && npm run build:ipfs && npm run build:knowledge-base",
    "build:all": "npm run build:core && npm run build:modules",
    "test": "jest --config jest.unit.config.js",
    "test:database": "cd src/database && npm test",
    "test:ipfs": "cd src/ipfs && npm test",
    "test:knowledge-base": "cd src/knowledge-base && npm test",
    "test:modules": "npm run test:database && npm run test:ipfs && npm run test:knowledge-base",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm test && npm run test:integration",
    "test:coverage": "jest --config jest.unit.config.js --coverage",
    "test:watch": "jest --config jest.unit.config.js --watch",
    "test:api": "jest src/api/__tests__ --config jest.unit.config.js",
    "clean": "rm -rf dist",
    "clean:database": "cd src/database && npm run clean",
    "clean:ipfs": "cd src/ipfs && npm run clean",
    "clean:knowledge-base": "cd src/knowledge-base && npm run clean",
    "clean:all": "npm run clean && npm run clean:database && npm run clean:ipfs && npm run clean:knowledge-base",
    "prepublishOnly": "npm run clean && npm run build",
    "demo": "npm run build && node examples/demo.js",
    "api:start": "npx ts-node src/api/server.ts",
    "api:dev": "npx ts-node --watch src/api/server.ts",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test test/contracts/*.test.ts",
    "deploy:mumbai": "hardhat run scripts/deploy-heartbeat.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy-heartbeat.js --network polygon",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon",
    "license:add": "node scripts/add-spdx-headers.mjs",
    "license:check": "grep -r 'SPDX-License-Identifier' src/ contracts/ scripts/ | wc -l && echo 'Source files have SPDX headers'",
    "license:audit": "npm audit --production",
    "license:report": "npm ls --depth=0"
  },
  "keywords": [
    "did",
    "decentralized-identity",
    "blockchain",
    "polygon",
    "ethereum",
    "wallet",
    "cryptography",
    "web3"
  ],
  "author": "VEXEL Team",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/Violet-Site-Systems/VEXEL",
  "repository": {
    "type": "git",
    "url": "https://github.com/Violet-Site-Systems/VEXEL.git"
  },
  "bugs": {
    "url": "https://github.com/Violet-Site-Systems/VEXEL/issues",
    "email": "support@vexel.dev"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "arweave": "^1.15.7",
    "cors": "^2.8.5",
    "did-jwt": "^8.0.18",
    "did-resolver": "^4.1.0",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.28.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "tmp": "^0.2.4"
  }
}
