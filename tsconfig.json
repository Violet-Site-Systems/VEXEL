{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/database/**/*", "src/ipfs/**/*", "src/example.ts", "src/service.ts", "src/knowledge-base/**/*"],
  "references": [
    { "path": "./src/database" },
    { "path": "./src/ipfs" },
    { "path": "./src/knowledge-base" }
  ]
}
